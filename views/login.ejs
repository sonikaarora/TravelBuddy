 <div class="col-md-6">
<div ng-controller="regCtrl">

<form action="/login" method="post"  class="form-horizontal well" name="userForm" ng-submit="registration()">


<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="fn">Email Address</label>  
  <div class="col-md-4">
  <input id="fn" name="fn" type="text" placeholder="Please provide Email Address" ng-model="user.emailaddress" class="form-control input-md" required="">
    
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="fn">First Name</label>  
  <div class="col-md-4">
  <input id="fn" name="fn" type="text" placeholder="Please provide first name" ng-model="user.firstname" class="form-control input-md" required="">
    
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="fn">Last Name</label>  
  <div class="col-md-4">
  <input id="fn" name="fn" type="text" placeholder="Please provide last name" ng-model="user.lastname" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="ln">Password</label>  
  <div class="col-md-4">
  <input id="ln" name="ln" type="password" placeholder="Please provide Password" ng-model="user.password" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="cmpny">Confirm Password</label>  
  <div class="col-md-4">
  <input id="cmpny" name="cmpny" type="password" placeholder="Please confirm your password" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="phone">Text InputPhone</label>  
  <div class="col-md-4">
  <input id="phone" name="phone" type="text" placeholder="Please provide phone number" ng-model="user.phone" class="form-control input-md" required="">
    
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="phone">Your Profile Picture</label>  
  <div class="col-md-4">
  <input type="file" onchange="previewFile()"><br>
<img src="" height="" alt="Image preview...">
    
  </div>
</div>




<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <button id="submit" name="submit" class="btn btn-primary">SUBMIT</button>
  </div>
</div>
</form>


</div>

