<div class="col-md-6" >
<div class="col-sm-6 col-sm-offset-3" id="login">
 
      <h1 style="font-size: 25px;font-family: fantasy;">Sign in</h1>
    <!-- LOGIN FORM -->
    <form action="/login" method="post" class="well">
    
     <img class="pull-left" >
     <div align="right">
        <div class="form-group,clearfix">
            <label>Email Address</label>&nbsp;
            <input type="text" class="form-control,clearfix" name="username">
        </div>
        &nbsp;
        <div class="form-group,clearfix">
            <label>Password</label>&nbsp;
            <input type="password" class="form-control,clearfix" name="password">
        </div>
        
        <hr>
        <br>
        <div>
        <input id="persist_box" type="checkbox" name="persistent" value="1" checked="1" class="uiInputLabelInput uiInputLabelCheckbox"/>
        <label for="persist_box" class="uiInputLabelLabel">Remember Me</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
     </div>
        
    </form>
</div>
